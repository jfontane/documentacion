{% set activo = "documentos" %}
{% extends "@Documentacion/layout.html.twig" %}
{% block title %}Listado de Documentos{% endblock %}
{% block pageid 'admin' %}

    {% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Documentos</li>
        </ol>
    </nav>
        {# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> ï¿½ </body></html> #}
        <h3>Listado de Documentacion</h3>
        <div class="grid_16">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Cuil</th>
                        <th>Archivo</th>
                        <th>Arch.Fisico</th>
                        <th>Periodo</th>
                        <th>Descripcion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>

                {% for documento in documentos %}
                                        <tr>
                                            <td>
                                                {{ documento['id'] }}
                                            </td>
                                            <td>{{ documento['cuil'] }}</td>
                                            <td>
                                            {% if (documento['archivoFisico']=='No') %}
                                               <font color='red'> {{ documento['archivo'] }} </font>
                                            {% else %}
                                              <font color='blue'> {{ documento['archivo'] }} </font>
                                            {% endif %}
                                            </td>
                                            <td>{{ documento['archivoFisico'] }}</td>
                                            <td>{{ documento['periodoAnio'] }}/{{ documento['periodoMes'] }}</td>
                                            <td>{{ documento['descripcion'] }}</td>
                                            <td>
                                               {% if (documento['archivoFisico']=='Si') %}
                                                <a href="{{path('documento_descargar',{'id' : documento['id'] })}}">
                                                    <i class="material-icons">visibility</i></a>&nbsp;&nbsp;
                                               {% endif %}
                                                <a href=""><i class="material-icons">edit</i></a>&nbsp;&nbsp;
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">No existe ningun Documento</td>
                                        </tr>
                                    {% endfor %}



                </tbody>
            </table>
        </div>
    {% endblock %}
