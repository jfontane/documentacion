{% set activo = 'usuarios' %}
{% extends "@Documentacion/layout.html.twig" %}
    {% block body %}
      <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('principal_logueado') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('usuarios_listar') }}">Usuarios</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Email</li>
          </ol>
        </nav>
            <h2><i class="material-icons">edit</i>&nbsp;&nbsp;Editar Email</h2>
            <br>

            <div class='row'>
                <div class='col-lg-6'>

                  {{ form_start(form) }}
                        <div class='control-group form-group'>
                            <label for="username"><b>Email</b></label>
                            <div class='controls'>
                                {{ form_widget(form.username) }}
                            </div>
                        </div>
                        <div class='control-group form-group'>
                            <div class='controls'>
                                <button class="btn btn-primary" type="submit">Aceptar</button>
                            </div>
                        </div>
                        <div class='control-group form-group'>
                            <div class='controls'>
                                {{ form_errors(form) }}
                            </div>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
    {% endblock %}
