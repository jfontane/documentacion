{% set activo = "documentos" %}
{% extends "@Documentacion/layout.html.twig" %}
{% block title %}Listado de Documentos{% endblock %}
{% block pageid 'admin' %}

    {% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Documentos</li>
        </ol>
    </nav>

        <div class="alert alert-warning" role="alert">
            {% for mensaje in app.session.flashbag.get('warn') %}
                <p class="warn">{{ mensaje }}</p>
            {% endfor %}
        </div>

        <h3>Listado de Documentacion</h3>
        <br>
         <b>Cantidad de Archivos Sin Vinculacion:</b> {{ cantidad }}
        <br>
        <hr>
        {% if cantidad > 0  %}
          <a href="{{ path('documento_eliminar_sobrantes') }}" class="btn btn-primary">Eliminar Todos</a>
          <br>
          <br>
        {% endif %}

        <div class="grid_16">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Archivo Fisico</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% set c = 0 %}
                {% for documento in documentos %}
                                        <tr>
                                            <td>
                                                {% set c = c + 1 %}
                                                {{ c }}
                                            </td>
                                            <td>{{ documento['archivo'] }}</td>
                                            <td>

                                                <a href="#">
                                                    <i class="material-icons">delete</i>
                                                </a>

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3">No existe ningun Documento Fisico que este sobrando</td>
                                        </tr>
                                    {% endfor %}



                </tbody>
            </table>
        </div>
    {% endblock %}
    {% block javascripts %}
        <script>
            function confirmaBorrar() {
                if (confirm("Desea Eliminar un Evento???")) {
                    //location.href
                }
            }
        </script>
    {% endblock %}
